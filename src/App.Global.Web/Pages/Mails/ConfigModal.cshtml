@page
@using App.Global.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model App.Global.Web.Pages.Mails.ConfigModalModel
@inject IStringLocalizer<GlobalResource> L
@{
    Layout = null;
}
<abp-modal>
    <abp-modal-header title="@L["emailConfig"]"></abp-modal-header>
    <abp-modal-body>
        <div class="container">
            @foreach (var item in Model.Configs)
            {
                <div class="form-group" style="margin-bottom: 10px">
                    <label for="@item.Code">@item.Description</label>
                    @if (item.Value == "true" || item.Value == "false")
                    {
                        <input type="checkbox" name="@item.Code" @(item.Value=="true" ? "checked" : "") />
                    }
                    else
                    {
                        <input type="text" name="@item.Code" value="@item.Value" class="form-control" />
                    }
                </div>
            }
        </div>
    </abp-modal-body>
    <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
</abp-modal>
